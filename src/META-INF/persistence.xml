			<!-- MARICA -->
			<!--<property name="javax.persistence.jdbc.url"	value="jdbc:mysql://54.39.173.150:3306/lix_hml_marica_somar?createDatabaseIfNotExist=true" />--> 
			
			<!-- PETROPOLIS -->
			<!--<property name="javax.persistence.jdbc.url"	value="jdbc:mysql://54.39.173.150:3306/lix_hml_petropolis_forcaambiental?createDatabaseIfNotExist=true" />  -->
			
			
			
